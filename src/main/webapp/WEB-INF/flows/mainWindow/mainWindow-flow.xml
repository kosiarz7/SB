<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" start-state="home"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
	http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<!-- Zabezpieczenie flow przez Spring Security -->
	<secured attributes="ROLE_USER" />

	<view-state id="home">
		<on-entry>
			<evaluate expression="controller.getAccounts()" result="viewScope.accounts" />
		</on-entry>
		<transition on="delete" to="delete"/>
		<transition on="transfer" to="home" />
		<transition on="history" to="home" />
		<transition on="addCoowner" to="home" />
		<transition on="resign" to="home" />
	</view-state>
	
	<view-state id="delete" >
		<transition on="delete" to="deleteAccount">
			<evaluate expression="controller.isAccountNumberValid(data)" />
		</transition>
	</view-state>
	
	<action-state id="deleteAccount">
		<evaluate expression="controller.deleteAccount(data)" />
		<transition to="home" />
	</action-state>

	<bean-import resource="flow-beans.xml" />
</flow>