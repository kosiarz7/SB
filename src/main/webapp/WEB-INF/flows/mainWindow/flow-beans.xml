<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xmlns:c="http://www.springframework.org/schema/c"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="data" class="systemy.bankowe.flows.mainwindow.MainWindowData" scope="flow"/>

    <bean id="controller" class="systemy.bankowe.flows.mainwindow.MainWindowBean">
    	<property name="springSecurityUtil" ref="springSecurityContextUtilBean"/>
    	<property name="accountNumberService" ref="accountNumberService"/>
    	<property name="userService" ref="userService"/>
    	<property name="commonUserDao" ref="commonDao" />
    	<property name="commonAccountDto" ref="commonDao" />
    </bean>
    
    <bean id="accountDetails" class="systemy.bankowe.flows.mainwindow.AccountDetails" scope="flow"/>
</beans>