<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" start-state="createDeposit"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
	http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<!-- Zabezpieczenie flow przez Spring Security -->
	<secured attributes="ROLE_USER"/>
	
	<var name="deposit" class="systemy.bankowe.dto.deposit.DepositDto"/>
	<var name="depositType" class="systemy.bankowe.dto.deposit.DepositTypeDto"/>
	
	<view-state id="createDeposit">
		<transition on="selectDeposit" to="deposit3month">
			<set name="flowScope.depositTypeIdKey" value="requestParameters.depositTypeId" />
		</transition>
	</view-state>
	
	<view-state id="deposit3month">
		<on-entry>
			<evaluate expression="depositController.getDepositType(depositTypeIdKey)" result="flowScope.depositType"/>
		</on-entry>
		<transition on="submit3month" to="checkConditions3month">
			<evaluate expression="depositController.validateNewDepositData(deposit,depositType)"></evaluate>
		</transition>
		<transition on="cancel" to="depositCancelled"/>
	</view-state>
	
	<action-state id="checkConditions3month">
		<evaluate expression="depositController.createDeposit3Month(deposit,depositType)"/>
		<transition on="yes" to="createDepositEnd" />
        <transition on="no" to="rejected" />
	</action-state>
	
	<view-state id="createDepositEnd"/>
	
	<end-state id="rejected"/>
	<end-state id="depositCancelled"/>
	
	<bean-import resource="flow-beans.xml" />
</flow>
