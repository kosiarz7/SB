<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" start-state="myDeposits"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
	http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<!-- Zabezpieczenie flow przez Spring Security -->
	<secured attributes="ROLE_USER"/>
	
	<view-state id="myDeposits">
		<on-entry>
			<evaluate expression="controller.getListOfDeposits()" result="flowScope.deposits"></evaluate>
		</on-entry>
		<transition on="getDetails" to="details">
			<set name="flowScope.depositIdKey" value="requestParameters.depositId" />
		</transition>		
	</view-state>
	
	<view-state id="details">
		<on-entry>
			<evaluate expression="controller.getSelectedDeposit(depositIdKey)" result="flowScope.deposit"></evaluate>
		</on-entry>
		<transition on="closeDeposit" to="depositClosed">
		    <!-- <set name="flowScope.closeDepositIdKey" value="requestParameters.closeDepositId" />  -->
			<evaluate expression="controller.closeDeposit(requestParameters.closeDepositId)"></evaluate>
		</transition>
	</view-state>
	
	<view-state id="depositClosed"/>
	
	<bean-import resource="flow-beans.xml" />
</flow>